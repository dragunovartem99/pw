#!/bin/bash

STORAGE=$PW_PATH/pw.txt
touch -- "$STORAGE"

COL_SP=':::::'

help () {
	echo -e "Утилита для быстрого копирования значения по ключу из файла в буфер\n"
	echo -e "Доступные параметры:\n"
	echo "pw <key>              - копирование значения по указанному ключу в буфер"
	echo "pw -add <key> <value> - добавление новой пары ключ/значение"
	echo "pw -rm <key>          - удаление записи по ключу"
	echo "pw -ls                - получение всех ключей из файла"
	exit
}

err () {
	echo $1
	exit
}

invalid () {
	err "Команда $1 не существует"
}

add () {
	if grep -q '^'$2 $STORAGE ; then
		err "Такой ключ уже существует"
	fi

	if [[ -z $2 || -z $3 ]] ; then
		err " Введите ключ и значение"
	fi

	LOGIN=$2

	if [[ -z $4 ]] ; then
		PASSWORD=$3
		ENCRYPT=0
	else
		PASSWORD=$(echo $3 | openssl aes-256-cbc -a -A)
		ENCRYPT=1
	fi

	printf "%s${COL_SP}%s${COL_SP}%s\n" $LOGIN $PASSWORD $ENCRYPT >> $STORAGE
}

remove () {
	sed -E "/^$2$COL_SP.*$/d" $STORAGE > $STORAGE.bak && mv $STORAGE.bak $STORAGE
}

get () {
	if [ -z "$1" ] ; then
		err "Введите ключ или команду"
	fi

	if [ -z $1 ] ; then
		err "Введите ключ"
	fi

	PASSWORD=$(awk -F $COL_SP '/^'$1$COL_SP'/{print $2}' $STORAGE)

	if [ -z $PASSWORD ] ; then
		err "Ключ $1 не существует"
	fi

	if [[ $(awk -F $COL_SP '/^'$1'/{print $3}' $STORAGE) -eq 1 ]] ; then
		PASSWORD=$(echo $PASSWORD | openssl aes-256-cbc -a -A -d)
	fi

	echo $PASSWORD | tr -d '\n' | xclip -selection c
}

cssh () {
	get $2
	ssh $2
}

list () {
	cat $STORAGE | awk -F $COL_SP '{print $1}'
}

case $1 in
	-help) help ;;

	-add)  add $@ ;;
	-rm)  remove $@ ;;

	-ssh)  cssh $@ ;;

	-ls) list ;;

	-*)  invalid $@ ;;
	*)  get $1 ;;
esac